---
interface Props {
  href: string;
  variant?: 'primary' | 'secondary' | 'ghost';
  size?: 'default' | 'large';
  class?: string;
}

const { href, variant = 'primary', size = 'default', class: className = '' } = Astro.props;

const variantClasses = {
  primary: 'btn-primary',
  secondary: 'btn-secondary',
  ghost: 'btn-ghost',
};
---

<a
  href={href}
  class={`${variantClasses[variant]} ${className}`}
>
  <slot />
</a>