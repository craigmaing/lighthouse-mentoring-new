<!-- AI-HUMAN METHODOLOGY - The Lighthouse Advantage -->
<section class="py-20 lg:py-32 px-6 lg:px-8 dark-section">
  <div class="container max-w-7xl mx-auto">
    <!-- Section Header -->
    <div class="max-w-4xl mx-auto text-center mb-20">
      <p class="text-sm font-bold text-[#00D4AA] uppercase tracking-wider mb-4">The Lighthouse Method</p>
      <h2 class="text-5xl lg:text-6xl font-bold text-white mb-8 leading-tight">
