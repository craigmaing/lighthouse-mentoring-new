      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">

        <!-- Strategy & Transformation -->
        <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-6 group hover:bg-white/10 transition-all card-hover-effect">
