    <!-- Methodology Overview -->
    <div class="grid lg:grid-cols-2 gap-16 mb-20">
      <!-- Left: The Problem -->
      <div>
        <h3 class="text-3xl font-bold text-white mb-8">Why Most Consulting Fails</h3>
        <div class="space-y-6">
          <div class="border-l-4 border-red-400 pl-6">
