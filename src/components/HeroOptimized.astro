---
import Button from './Button.astro';
---

<section class="hero-section relative overflow-hidden">
  <!-- Simple gradient background - no complex overlays -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary to-primary/90"></div>

  <!-- Content - Drastically simplified -->
  <div class="relative z-10 container max-w-6xl mx-auto px-6 py-24 lg:py-32">
    <div class="max-w-4xl">
      <!-- Single clear value prop -->
      <h1 class="text-hero text-white mb-6 font-bold">
        Cut Your Wellbeing Assessment Time by 75%
      </h1>

      <!-- One benefit-focused subtitle -->
      <p class="text-body-large text-white/95 mb-8 max-w-2xl">
        Get board-ready wellbeing audits in 8 weeks, not 8 months.
        Used by HSBC, Brown-Forman, and 100+ organizations.
      </p>

      <!-- Single CTA with urgency -->
      <div class="flex flex-col sm:flex-row gap-4 mb-8">
        <Button
          href="/contact#book"
          size="large"
          variant="white"
          class="shadow-button hover:shadow-button-hover btn-scale"
        >
          Get Your Assessment → £2,950
        </Button>
        <Button
          href="#proof"
          size="large"
          variant="ghost"
        >
          See 5-Minute Demo
        </Button>
      </div>

      <!-- Single trust signal -->
      <p class="text-small text-white/80">
        ✓ ISO 45003 Compliant • ✓ AI-Enhanced Analysis • ✓ Fellow-Level Expertise
      </p>
    </div>
  </div>
</section>

<style>
  .hero-section {
    min-height: 85vh;
    display: flex;
    align-items: center;
  }

  @media (max-width: 768px) {
    .hero-section {
      min-height: 100vh;
    }
  }
</style>