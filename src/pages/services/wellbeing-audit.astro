---
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/Button.astro';
import PricingSection from '../../components/PricingSection.astro';
---

<Layout title="Lighthouse Wellbeing Audit™">
  <section class="section-padding px-4">
    <div class="container max-w-6xl mx-auto">
      <!-- Hero -->
      <div class="text-center mb-12">
        <span class="inline-block px-4 py-2 bg-primary text-white rounded-full text-small font-semibold mb-4">
          CORE SERVICE
        </span>
        <h1 class="text-h1 font-bold mb-4">
          The Lighthouse <span class="text-primary">Wellbeing Audit™</span>
        </h1>
        <p class="text-xl text-text-secondary max-w-3xl mx-auto">
          Comprehensive organizational wellbeing assessment enhanced by AI, delivered by a dual Fellow consultant
        </p>
      </div>

      <!-- Key Benefits -->
      <div class="grid md:grid-cols-4 gap-6 mb-12">
        <div class="text-center">
          <div class="text-4xl font-bold text-primary mb-2">8</div>
          <p class="font-semibold">Week Delivery</p>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-primary mb-2">AI</div>
          <p class="font-semibold">Enhanced Analysis</p>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-primary mb-2">£50</div>
          <p class="font-semibold">Per Employee</p>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-primary mb-2">4.7:1</div>
          <p class="font-semibold">Industry ROI</p>
        </div>
      </div>

      <!-- What It Is -->
      <div class="mb-12">
        <h2 class="text-3xl font-bold mb-6">What It Is</h2>
        <div class="bg-white rounded-lg shadow-lg p-8">
          <ul class="space-y-4">
            <li class="flex items-start gap-4">
              <svg class="w-6 h-6 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"></path>
              </svg>
              <div>
                <h3 class="font-semibold mb-1">Comprehensive organizational wellbeing assessment</h3>
                <p class="text-text-secondary">Full analysis of your workplace culture, stress factors, and wellbeing risks</p>
              </div>
            </li>
            <li class="flex items-start gap-4">
              <svg class="w-6 h-6 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"></path>
              </svg>
              <div>
                <h3 class="font-semibold mb-1">Proprietary AI-enhanced analysis</h3>
                <p class="text-text-secondary">Pattern recognition from 17 years experience combined with AI insights</p>
              </div>
            </li>
            <li class="flex items-start gap-4">
              <svg class="w-6 h-6 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"></path>
              </svg>
              <div>
                <h3 class="font-semibold mb-1">One-time investment, not annual subscription</h3>
                <p class="text-text-secondary">No platform fees, no lock-in, just actionable insights</p>
              </div>
            </li>
            <li class="flex items-start gap-4">
              <svg class="w-6 h-6 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"></path>
              </svg>
              <div>
                <h3 class="font-semibold mb-1">Fellow-level strategic insights throughout</h3>
                <p class="text-text-secondary">Direct access to dual Fellow expertise, no junior consultants</p>
              </div>
            </li>
          </ul>
        </div>
      </div>

      <!-- What's Included -->
      <div class="mb-12">
        <h2 class="text-3xl font-bold mb-6">What's Included</h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-background-alt p-6 rounded-lg">
            <h3 class="text-xl font-bold mb-4">Assessment Components</h3>
            <ul class="space-y-3">
              <li class="flex items-center gap-2">
                <span class="text-primary">✓</span>
                Custom AI-generated survey design
              </li>
              <li class="flex items-center gap-2">
                <span class="text-primary">✓</span>
                Full employee participation capability
              </li>
              <li class="flex items-center gap-2">
                <span class="text-primary">✓</span>
                Advanced pattern recognition analysis
              </li>
              <li class="flex items-center gap-2">
                <span class="text-primary">✓</span>
                Stakeholder interviews (growth tier+)
              </li>
            </ul>
          </div>

          <div class="bg-background-alt p-6 rounded-lg">
            <h3 class="text-xl font-bold mb-4">Deliverables</h3>
            <ul class="space-y-3">
              <li class="flex items-center gap-2">
                <span class="text-primary">✓</span>
                Comprehensive report (15-100+ pages)
              </li>
              <li class="flex items-center gap-2">
                <span class="text-primary">✓</span>
                Executive presentation & recommendations
              </li>
              <li class="flex items-center gap-2">
                <span class="text-primary">✓</span>
                Action plan with prioritized initiatives
              </li>
              <li class="flex items-center gap-2">
                <span class="text-primary">✓</span>
                ROI projections & business case
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Process Timeline -->
      <div class="mb-12">
        <h2 class="text-3xl font-bold mb-6">The 8-Week Journey</h2>
        <div class="bg-white rounded-lg shadow-lg p-8">
          <div class="space-y-6">
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-20 text-right">
                <span class="font-bold text-primary">Week 1-2</span>
              </div>
              <div class="flex-grow">
                <h3 class="font-semibold mb-2">Discovery & Design</h3>
                <p class="text-text-secondary">Initial consultation, survey customization, communication planning</p>
              </div>
            </div>
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-20 text-right">
                <span class="font-bold text-primary">Week 3-4</span>
              </div>
              <div class="flex-grow">
                <h3 class="font-semibold mb-2">Data Collection</h3>
                <p class="text-text-secondary">Survey deployment, employee participation, stakeholder interviews</p>
              </div>
            </div>
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-20 text-right">
                <span class="font-bold text-primary">Week 5-6</span>
              </div>
              <div class="flex-grow">
                <h3 class="font-semibold mb-2">AI-Enhanced Analysis</h3>
                <p class="text-text-secondary">Pattern recognition, risk modeling, predictive analytics</p>
              </div>
            </div>
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-20 text-right">
                <span class="font-bold text-primary">Week 7-8</span>
              </div>
              <div class="flex-grow">
                <h3 class="font-semibold mb-2">Insights & Action Plan</h3>
                <p class="text-text-secondary">Report finalization, executive presentation, strategic roadmap</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- What's NOT Included -->
      <div class="mb-12">
        <h2 class="text-3xl font-bold mb-6">What's NOT Included</h2>
        <div class="bg-red-50 border-2 border-red-200 rounded-lg p-8">
          <ul class="space-y-3">
            <li class="flex items-start gap-2">
              <span class="text-red-500">✗</span>
              <span>Access to proprietary AI system (this remains confidential)</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-red-500">✗</span>
              <span>Ongoing monitoring (available as separate Pulse service)</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-red-500">✗</span>
              <span>Implementation support (additional consulting available)</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-red-500">✗</span>
              <span>Platform or dashboard access (one-time assessment)</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Pricing Section -->
  <PricingSection />

  <!-- CTA -->
  <section class="py-16 px-4 bg-primary text-white">
    <div class="container max-w-4xl mx-auto text-center">
      <h2 class="text-h2 font-bold mb-6">
        Ready to Join the 18% of SMEs with a Wellbeing Strategy?
      </h2>
      <p class="text-xl mb-8 opacity-90">
        Limited to 2 audits per quarter to ensure quality delivery
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/contact" size="large" variant="ghost" class="bg-white hover:bg-gray-100">
          Book Your Audit
        </Button>
        <Button href="/contact" size="large" variant="ghost" class="border-white text-white hover:bg-white/10">
          Download Brochure
        </Button>
      </div>
    </div>
  </section>
</Layout>