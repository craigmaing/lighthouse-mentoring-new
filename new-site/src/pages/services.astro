---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import { Image, Picture } from 'astro:assets';

// Import images for optimization
import executiveSuccess from '../images/executive-success-7516.jpg';
---

<Layout
  keywords="board advisory services, executive coaching, non-executive director, strategic consulting, organizational wellbeing, NED services, board governance"
  title="Strategic Consulting Services | Board Advisory & Executive Coaching"
  description="Board advisory, executive coaching, and organizational wellbeing services. Evidence-based strategic consulting from an FCMI Fellow, FRSPH Fellow, and IoD Ambassador."
>
  <!-- Page Hero -->
  <section class="hero section-padding bg-primary text-white">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-12 items-start">
      <div>
        <h1 class="mb-6">
          Strategic Advisory When Stakes Are High
        </h1>
        <p class="text-gray-100 leading-relaxed mb-6">
          Board advisory, executive coaching, and strategic consulting—specialized guidance that draws on both deep experience and evidence-based methodology.
        </p>
        <p class="text-gray-100 leading-relaxed mb-8">
          Extensive board-level experience across NHS, technology, financial services, and professional services. IoD Ambassador, FRSPH Fellow, FCMI Fellow—supporting organizations navigating complex challenges.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4">
          <Button href="/contact" variant="secondary">
            Discuss Your Challenge
          </Button>
          <Button href="#board-advisory" variant="ghost" class="text-white hover:text-gray-100">
            Explore Services Below
          </Button>
        </div>
        </div>
        <!-- Conference Image -->
        <div class="hidden lg:block">
          <Picture
            src={executiveSuccess}
            alt="Craig Fearn - Professional Executive Consultant"
            class="w-full max-w-md mx-auto rounded-2xl shadow-2xl"
            widths={[400, 600, 800, 1200, 1600]}
            sizes="(max-width: 640px) 400px, (max-width: 768px) 600px, (max-width: 1024px) 800px, (max-width: 1536px) 1200px, 1600px"
            formats={['avif', 'webp']}
            loading="eager"
            fetchpriority="high"
            quality={85}
          />
        </div>
      </div>
    </div>
  </section>

