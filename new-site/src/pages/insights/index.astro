---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allInsights = await getCollection('insights');
const sortedInsights = allInsights.sort((a, b) =>
  b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Separate featured articles
const featuredInsights = sortedInsights.filter(insight => insight.data.featured);
const regularInsights = sortedInsights.filter(insight => !insight.data.featured);

const categoryColors = {
  'board-advisory': 'bg-blue-100 text-blue-800',
  'executive-coaching': 'bg-green-100 text-green-800',
  'wellbeing': 'bg-purple-100 text-purple-800',
  'leadership': 'bg-orange-100 text-orange-800',
  'governance': 'bg-gray-100 text-gray-800',
};

// Calculate reading time (average 200 words per minute)
function calculateReadingTime(content: string): number {
  const words = content.split(/\s+/).length;
  return Math.ceil(words / 200);
}
---

<Layout
  title="Insights & Articles | Lighthouse Mentoring"
  description="Expert insights on board advisory, executive coaching, and organizational wellbeing from Craig Fearn, FCMI Fellow and FRSPH Fellow."
>
  <!-- Hero Section -->
  <section class="section-padding bg-primary text-white">
    <div class="container max-w-4xl text-center">
      <h1 class="mb-6">Insights & Articles</h1>
      <p class="text-xl text-gray-100 leading-relaxed">
        Expert perspectives on board governance, executive coaching, and organizational wellbeing from someone who's spent 17 years working at board level.
      </p>
    </div>
  </section>

  {sortedInsights.length === 0 ? (
    <section class="section-padding bg-eggshell">
      <div class="container max-w-5xl">
        <div class="text-center py-12">
          <p class="text-gray-600 text-lg">Articles coming soon...</p>
        </div>
      </div>
    </section>
  ) : (
    <>
      <!-- Featured Articles -->
      {featuredInsights.length > 0 && (
        <section class="section-padding bg-white">
          <div class="container max-w-6xl">
            <h2 class="text-h2 text-gray-900 mb-8">Featured Articles</h2>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
              {featuredInsights.slice(0, 3).map((insight) => (
                <article class="card p-8 hover:shadow-lg transition-shadow duration-200 border-2 border-accent/20">
                  <div class="flex items-center gap-2 mb-4">
                    <span class={`inline-block px-3 py-1 rounded-full text-xs font-semibold ${categoryColors[insight.data.category]}`}>
                      {insight.data.category.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ')}
                    </span>
                  </div>

                  <h3 class="text-h3 text-gray-900 mb-3 leading-tight">
                    <a href={`/insights/${insight.slug}`} class="hover:text-accent transition-colors">
                      {insight.data.title}
                    </a>
                  </h3>

                  <p class="text-gray-700 mb-4 leading-relaxed">
                    {insight.data.description}
                  </p>

                  <div class="flex items-center justify-between text-sm text-gray-600 pt-4 border-t border-gray-200">
                    <time datetime={insight.data.pubDate.toISOString()}>
                      {insight.data.pubDate.toLocaleDateString('en-GB', {
                        month: 'short',
                        day: 'numeric',
                        year: 'numeric'
                      })}
                    </time>
                    <a
                      href={`/insights/${insight.slug}`}
                      class="text-accent hover:underline font-semibold inline-flex items-center py-2.5 min-h-11"
                    >
                      Read article →
                    </a>
                  </div>
                </article>
              ))}
            </div>
          </div>
        </section>
      )}

      <!-- All Articles -->
      <section class="section-padding bg-eggshell">
        <div class="container max-w-6xl">
          <div class="flex items-center justify-between mb-8">
            <h2 class="text-h2 text-gray-900">All Articles</h2>
            <p class="text-gray-600">{sortedInsights.length} {sortedInsights.length === 1 ? 'article' : 'articles'}</p>
          </div>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {sortedInsights.map((insight) => (
              <article class="card p-8 hover:shadow-lg transition-shadow duration-200">
                <div class="flex items-center gap-2 mb-4">
                  <span class={`inline-block px-3 py-1 rounded-full text-xs font-semibold ${categoryColors[insight.data.category]}`}>
                    {insight.data.category.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ')}
                  </span>
                </div>

                <h3 class="text-h3 text-gray-900 mb-3 leading-tight">
                  <a href={`/insights/${insight.slug}`} class="hover:text-accent transition-colors">
                    {insight.data.title}
                  </a>
                </h3>

                <p class="text-gray-700 mb-4 leading-relaxed line-clamp-3">
                  {insight.data.description}
                </p>

                <div class="flex items-center justify-between text-sm text-gray-600 pt-4 border-t border-gray-200">
                  <time datetime={insight.data.pubDate.toISOString()}>
                    {insight.data.pubDate.toLocaleDateString('en-GB', {
                      month: 'short',
                      day: 'numeric',
                      year: 'numeric'
                    })}
                  </time>
                  <a
                    href={`/insights/${insight.slug}`}
                    class="text-accent hover:underline font-semibold inline-flex items-center py-2.5 min-h-11"
                  >
                    Read →
                  </a>
                </div>
              </article>
            ))}
          </div>
        </div>
      </section>
    </>
  )}
</Layout>
